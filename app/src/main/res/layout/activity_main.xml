<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1F3C88"
        android:theme="@style/Theme.PivotPortfolios.AppBarOverlay">

        <ImageView
            android:id="@+id/appHeader"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#FF1F3C88"
            app:srcCompat="@drawable/ic_centered_transparent_logo" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A3375"
            app:tabIndicatorColor="#000000"
            app:tabTextColor="#FFFFFF">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/dashboardTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DASHBOARD" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/accountsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounts" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/goalsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Goals" />
        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/nav_host_fragment" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_news__newspaper__media__paper__press__article" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_chart__infographic__insight__analytics__presentation__line__fragment" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_money__bill__cash__pay" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_send__money__bill__payment__envelope" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/ic_settings__setup__set__gear__mechanic" />
        </TableRow>

    </TableLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>